import("//build/config/components/ets_frontend/es2abc_config.gni")
import("//build/ohos.gni")
import("//foundation/arkui/advanced_ui_component/atomicservice_config.gni")
 
es2abc_gen_abc("gen_atomicservicemenubar_abc") {
  src_js = rebase_path("atomicservicemenubar.js")
  dst_file = rebase_path(target_out_dir + "/atomicservicemenubar.abc")
  in_puts = [ "atomicservicemenubar.js" ]
  out_puts = [ target_out_dir + "/atomicservicemenubar.abc" ]
  extra_args = [ "--module" ]
}
 
gen_js_obj("atomicservicemenubar_abc") {
  input = get_label_info(":gen_atomicservicemenubar_abc",
                         "target_out_dir") + "/atomicservicemenubar.abc"
  output = target_out_dir + "/atomicservicemenubar_abc.o"
  dep = ":gen_atomicservicemenubar_abc"
}
 
gen_obj("atomicservicemenubar_abc_preview") {
  input = get_label_info(":gen_atomicservicemenubar_abc",
                         "target_out_dir") + "/atomicservicemenubar.abc"
                         print(input)
  output = target_out_dir + "/atomicservicemenubar_abc.c"
  snapshot_dep = [ ":gen_atomicservicemenubar_abc" ]
}
 
ohos_shared_library("atomicservicemenubar") {
  sources = [
    "src/native_menubar.cpp",
    "src/menubar_api_implement.cpp"
  ]
  
  include_dirs = [ "./", "../ace_engine/interfaces/native/" ]
 
  if (use_mingw_win || use_mac || use_linux) {
    deps = [ ":gen_obj_src_atomicservicemenubar_abc_preview" ]
  } else {
    deps = [ ":atomicservicemenubar_abc" ]
  }
 
  external_deps = [
    "hilog:libhilog",
    "napi:ace_napi",
    "ace_engine:ace_ndk",
    "ace_engine:ace_uicontent"
  ]
 
  relative_install_dir = "module/atomicservice"
  subsystem_name = "arkui"
  part_name = "advanced_ui_component"
}
